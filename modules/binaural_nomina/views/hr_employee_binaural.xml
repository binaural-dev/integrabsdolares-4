<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="employee_ari_inherit_binaural_nomina" model="ir.ui.view">
        <field name="name">binaural.employee.ari</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='work_permit']" position="after">
                <group string="ISLR">
                    <label for="porc_ari"/>
                    <div>
                        <field name="porc_ari" nolabel="1"/>
                        <span>%</span>
                    </div>
                </group>
            </xpath>

	    <xpath expr="//group[@name='departure']/field[@name='departure_date']" position="attributes">
		<attribute name="invisible">1</attribute>
            </xpath>

	    <field name="work_email" position="after">
		<field name="has_open_contract"/>
		<field name="entry_date"/>
		<field name="departure_date" string="Fecha de egreso"
		       attrs="{'readonly': [('has_open_contract', '=', True)]}"/>
		<field name="seniority"/>
	    </field>

	    <xpath expr="//field[@name='identification_id'][1]" position="attributes">
		<attribute name="invisible">1</attribute>
	    </xpath>

	    <xpath expr="//page[@name='personal_information']" position="inside">
		<group string="Datos Personales">
		    <label for="identification_id" string="RIF"/>
			<div id="vat" class="">
			    <field name="prefix_vat"/>
			    <field name="identification_id"/>
			</div>
		    <field name="house_type"/>
		</group>
	    </xpath>

	    <field name="country_id" position="after">
		<span class="o_form_label o_td_label" name="address_name">
		    <b>Dirección</b>
		</span>
		<div class="o_address_format">
		    <field name="street" placeholder="Calle..." class="o_address_street"/>
		    <field name="street2" placeholder="Calle 2..." class="o_address_street"/>
		    <field name="state_id" class="o_address_state" placeholder="Estado" 
			   context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
		    <field name="city_id" placeholder="Ciudad" class="o_address_city"/>
		    <field name="zip" placeholder="C.P" class="o_address_zip"/>
		    <field name="municipality_id" placeholder="Municipio"/>
		</div>
	    </field>

	    <field name="private_email" position="after">
	        <field name="private_mobile_phone" string="Teléfono celular"/>
	    </field>

	    <xpath expr="//page[@name='personal_information']/group/group[4]" position="attributes">
		<attribute name="invisible">1</attribute>
	    </xpath>
	    <xpath expr="//page[@name='personal_information']/group/group[8]" position="attributes">
		<attribute name="invisible">1</attribute>
	    </xpath>

	    <notebook position="inside">
	    	<page name="dependants" string="Dependientes" groups="hr.group_hr_user">
		    <field name="dependant_ids">
			<tree name="dependant_ids_tree" editable="bottom">
			    <field name="name"/>
			    <field name="birth_date"/>
			    <field name="code"/>
			    <field name="school_degree"/>
			    <field name="grade"/>
			    <field name="school"/>
			    <field name="school_address"/>
			</tree>
		    </field>
		</page>

		<page name="education" string="Estudios realizados" groups="hr.group_hr_user">
		    <field name="degree_ids">
			<tree name="degree_ids_tree" editable="bottom">
			    <field name="name"/>
			    <field name="school"/>
			    <field name="date_end"/>
			    <field name="degree"/>
			</tree>
		    </field>
		</page>

		<page name="banks_information" string="Información Bancaria" groups="hr.group_hr_user">
		    <field name="bank_ids">
			<tree name="bank_ids_tree" editable="bottom">
			    <field name="bank_name"/>
			    <field name="account_type" string="Tipo de cuenta"/>
			    <field name="name"/>
			    <field name="details"/>
			</tree>
		    </field>
		</page>
	     </notebook>
        </field>
    </record>
</odoo>
